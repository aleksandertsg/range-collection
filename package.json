{
  "name": "range-collection",
  "version": "1.0.0",
  "description": "simple range collection app",
  "main": "src/Index.ts",
  "author": "aleksandertsg",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^4.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "mocha": "^6.0.2",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.3333"
  },
  "scripts": {
    "build": "yarn run tslint && rm -rf ./build/* && yarn run build-ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon build/Index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,yellow.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "mocha -r ts-node/register --timeout 15000 'tests/**/*spec.ts' --exit"
  }
}
